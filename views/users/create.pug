h1 Create User 

  if errors 
    each error in errors 
      .alert.alert-danger= error

form(action="/users/create", method="POST")
  label Name 
  input(name="name", type="text", value=values ? values.name : "")

  label Phone 
  input(name="phone", type="text", value=values ? values.phone : "")

  button Create

