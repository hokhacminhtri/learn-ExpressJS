h1 Login

  if errors 
    each error in errors 
      .alert.alert-danger= error

form(action="/auth/login", method="POST")
  label(for="email") E-Mail 
  input(name="email", type="text", value=values ? values.name : "")

  label Password 
  input(name="password", type="password", value=values ? values.phone : "")

  button Login

